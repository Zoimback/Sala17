<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".DatosUser">

    <ImageView
        android:id="@+id/imagenUser"
        android:layout_width="168dp"
        android:layout_height="144dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.137"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/bienvenida"
        android:layout_width="266dp"
        android:layout_height="47dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenUser"
        app:layout_constraintVertical_bias="0.058"
        tools:text="Bienvenido, Carlos!" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="349dp"
        android:layout_height="210dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bienvenida">

        <Button
            android:id="@+id/btCompra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0054BA"
            android:text="Mis Copas / Comprar"
            app:cornerRadius="20dp"
            tools:text="Mis Copas / Comprar" />

        <Button
            android:id="@+id/btEventos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0054BA"
            android:text="Mis Eventos / Comprar"
            app:cornerRadius="20dp"
            tools:text="Mis Eventos / Comprar" />

        <Button
            android:id="@+id/btTinder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0054BA"
            android:text="Night Tinder"
            app:cornerRadius="20dp"
            tools:text="Night Tinder" />

        <Button
            android:id="@+id/btCancion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0054BA"
            android:text="Canción Actual ( only VIP )"
            app:cornerRadius="20dp"
            tools:text="Canción Actual ( only VIP )" />
    </LinearLayout>

    <Button
        android:id="@+id/settings"
        android:layout_width="64dp"
        android:layout_height="59dp"
        android:backgroundTint="#0054BA"
        android:text="Button"
        app:cornerRadius="20dp"
        app:icon="@android:drawable/ic_menu_manage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imagenUser"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.196" />
</androidx.constraintlayout.widget.ConstraintLayout>